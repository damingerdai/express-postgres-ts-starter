{
    "compilerOptions": {
      "target": "es6",
      "lib": ["dom", "es6", "esnext"],
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "declaration": false,
      "outDir": "dist",
      "typeRoots": ["node_modules/@types"],
      "types": ["node"],
      "baseUrl": ".",
      "noUnusedLocals": true
    },
    "include": ["src/**/*.ts", "server.ts", "test/**/*.ts"],
    "exclude": ["node_modules"]
  }
  